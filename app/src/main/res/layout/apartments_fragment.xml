    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutApartments"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/checkApartments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Apartments" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/addApartments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Apartment" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerApartments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutApartments" />


</androidx.constraintlayout.widget.ConstraintLayout>