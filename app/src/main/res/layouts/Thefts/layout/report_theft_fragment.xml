<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theftFrameLayout">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="11dp">

        <TextView
            android:id="@+id/reportATheft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report a Theft:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/theftWithin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="5dp"
            android:text="Theft Within:"
            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/theftWithinRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:checkedButton="@id/radioButtonYourBuildingTheft"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonYourBuildingTheft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Your Building" />

            <RadioButton
                android:id="@+id/radioButtonSmartCityTheft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="The Smart City"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </RadioGroup>

        <EditText
            android:textStyle="bold"

            android:id="@+id/theftTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:maxLength="31"

            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"/>

        <EditText
            android:textStyle="bold"

            android:id="@+id/theftMessage"
            android:layout_width="match_parent"

            android:layout_marginTop="21dp"

            android:ems="10"
            android:gravity="start|top"
            android:hint="Theft description message..."
            android:inputType="textMultiLine"
            android:layout_height="80dp"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"/>

        <TextView
            android:id="@+id/theftDateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Theft Date"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="italic|bold" />

        <Button
            android:id="@+id/setTheftDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Set Date"

            android:textColor="#ffffff"
            android:textSize="17sp"
            android:background="@drawable/rounded_corners_light_blue"/>

        <TextView
            android:id="@+id/theftTimeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Theft Time"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="italic|bold"/>

        <Button
            android:id="@+id/setTheftTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Set Time"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:background="@drawable/rounded_corners_light_blue"/>

        <TextView
            android:id="@+id/theftLocationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Theft Location"

            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="italic|bold"
            />

        <Button
            android:id="@+id/getCurrentLocationTheft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Get my current Location"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_corners_light_blue"/>

        <Button
            android:id="@+id/reportTheftButton"
            android:layout_width="115dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"
            android:background="@drawable/rounded_corners"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Report"
 />

    </LinearLayout>

</ScrollView>

</FrameLayout>