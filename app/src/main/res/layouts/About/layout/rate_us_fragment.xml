<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="11dp">

        <!--
        <TextView
            android:id="@+id/ourRatingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="Our current \nRating:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ourRatingTVContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="4.7"
            android:textAlignment="center"
            android:textColor="#FB1010"
            android:textSize="30sp"
            android:textStyle="bold" />
        -->

        <TextView
            android:id="@+id/rateUsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate us:"
            android:textSize="25sp"
            android:textColor="#324e7b"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rateUsRadioGroup">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="1"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="2"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="3"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="4"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:text="5"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/reviewTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Write a Review:"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:textColor="#324e7b" />

        <EditText
            android:textStyle="bold"
            android:id="@+id/reviewET"
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Review..."
            android:inputType="textMultiLine"
            android:paddingStart="11dp"
            android:paddingTop="7dp"
            android:paddingEnd="11dp"
            android:paddingBottom="7dp" />

        <Button
            android:id="@+id/submitReviewButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@drawable/rounded_corners"
            android:text="Submit"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>