<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="17dp">

        <TextView
            android:id="@+id/editProfileTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="Edit Your Profile"
            android:textColor="#324e7b"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fullNameEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phoneEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:maxLength="8"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/oldPasswordEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirmPasswordEP"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="5dp"
            android:paddingBottom="11dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupEditProfile"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="51dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonCommitteeEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#324e7b"
                android:text="Committee member"
                android:textColor="#324e7b"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonNormalResidentEP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#324e7b"
                android:text="Normal resident"
                android:textColor="#324e7b"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/editProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"

            android:background="@drawable/rounded_corners"
            android:padding="11dp"

            android:text="Edit Profile"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
