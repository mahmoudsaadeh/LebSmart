<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/addCommitteeDrLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addAnnouncementTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="17dp"
            android:text="Add a New Announcement:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/announcementTitleET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"

            android:ems="10"
            android:hint="Announcement Title"
            android:inputType="textPersonName"
            android:maxLength="37"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/announcementDescriptionET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"

            android:ems="10"
            android:hint="Announcement Description"
            android:inputType="textMultiLine"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/announcementTypeTV"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:text="Announcement Type:"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/committeeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonDecision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Decision"
                android:padding="7dp"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Reminder"

                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </RadioGroup>

        <Button
            android:id="@+id/addAnnouncementButton"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/rounded_corners"
            android:text="Announce"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>