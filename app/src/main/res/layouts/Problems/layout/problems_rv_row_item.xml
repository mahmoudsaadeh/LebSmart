    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="4dp"
    app:cardCornerRadius="27dp">


    <!--Electricity Section-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <!--
            <TextView
                android:id="@+id/problemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D67777"
                android:paddingLeft="7dp"
                android:text="Electricity Problems - 5 reports"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
                -->

            <TextView
                android:id="@+id/reportNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="4dp"
                android:paddingEnd="7dp"
                android:paddingBottom="5dp"
                android:text="Problem title"
                android:background="#324e7b"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TableLayout
                android:id="@+id/problemsExpandableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#DEF5FF"
                android:shrinkColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reportNumber">

                <TableRow
                    android:id="@+id/row1Problems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/problemDescriptionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="Description: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/problemDescriptionContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Problem description ..."
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row2Problems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/reportDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="Date: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/reportDateContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Sunday, feb 11th , 2020"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row3Problems"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/reportedByProblem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="Reported by: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/reportedByProblemContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Someone"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/reportersBuilding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="Reporter's building: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/reportersBuildingContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="building name here"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



