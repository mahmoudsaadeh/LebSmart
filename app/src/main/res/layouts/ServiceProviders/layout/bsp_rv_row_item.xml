<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/bspExpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/spName"
                    android:layout_width="209dp"
                    android:layout_height="32.5dp"
                    android:background="#009688"
                    android:text="SP Name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/spPhone"
                    android:layout_width="145dp"
                    android:layout_height="32.5dp"
                    android:background="#009688"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:gravity="center"
                    android:text="+961-76-888777"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TableLayout
                android:id="@+id/bspExpandableLayout"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#8BC34A"
                android:shrinkColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bspExpand">

                <TableRow
                    android:id="@+id/row1BSP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/bspJobTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job: "
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/bspJobContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="BSP's job ..."
                        android:textColor="#009688"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row2BSP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/bspPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone: "
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/bspPhoneContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="71-963258"
                        android:textColor="#009688"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row3BSP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/residencePlaceBSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place of Residence: "
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/residencePlaceBSPContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Somewhere on earth"
                        android:textColor="#009688"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row4BSP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/ratingBSP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating: "
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                </TableRow>

                <TableRow
                    android:id="@+id/row5BSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/bspRatingBar"
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="3.5"
                        android:visibility="visible" />

                </TableRow>

                <TableRow
                    android:id="@+id/row6BSP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/ratingBSP2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate the SP: "
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                </TableRow>

                <TableRow
                    android:id="@+id/row7BSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/bspRatingBar2"
                        style="@android:style/Widget.DeviceDefault.Light.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="0"
                        android:visibility="visible" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>