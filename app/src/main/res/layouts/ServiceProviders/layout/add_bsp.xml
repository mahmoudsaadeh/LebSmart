<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="17dp"
            android:text="Add a New Service Provider (SP):"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/spNameET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/spPhoneET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="number"
            android:maxLength="14" />

        <EditText
            android:id="@+id/spPlaceOfResidenceET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Place of Residence"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/spJobTV"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:text="Select a Job:"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/spRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonElectrician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Electrician" />

            <RadioButton
                android:id="@+id/radioButtonCarpenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Carpenter" />

            <RadioButton
                android:id="@+id/radioButtonPainter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Painter" />

            <RadioButton
                android:id="@+id/radioButtonPlumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Plumber" />

            <RadioButton
                android:id="@+id/radioButtonBlacksmith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Blacksmith" />

            <RadioButton
                android:id="@+id/radioButtonOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Other" />

        </RadioGroup>

        <EditText
            android:id="@+id/otherET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Other..."
            android:inputType="textMultiLine"
            android:visibility="gone" />

        <TextView
            android:id="@+id/spRateTV"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:text="Rate the SP:"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/spRatingBar"
            style="@android:style/Widget.Material.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:max="5"
            android:numStars="5"
            android:rating="3.5"
            android:scaleX="1"
            android:scaleY="1"
            android:stepSize=".5"
            android:visibility="visible" />

        <Button
            android:id="@+id/addSPButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:text="Add SP" />

    </LinearLayout>

</ScrollView>