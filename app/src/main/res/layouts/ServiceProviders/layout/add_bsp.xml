<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/addBspLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="17dp"
            android:text="Add a New Service Provider (SP):"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/spNameET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"

            android:ems="10"
            android:hint="Name"
            android:inputType="textMultiLine"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/spPhoneET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="number"
            android:maxLength="8"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"

            android:background="@drawable/edit_text_design"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/spPlaceOfResidenceET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Place of Residence"
            android:inputType="textMultiLine"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/edit_text_design"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/spJobTV"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:text="Select a Job:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/spRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonElectrician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Electrician"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonCarpenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Carpenter"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonPainter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Painter"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonPlumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Plumber"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonBlacksmith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Blacksmith"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="Other"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </RadioGroup>

        <EditText
            android:id="@+id/otherET"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:hint="Other..."
            android:inputType="textMultiLine"
            android:visibility="gone" />

        <TextView
            android:id="@+id/spRateTV"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="11dp"
            android:text="Rate the SP:"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/spRatingBar"
            style="@android:style/Widget.Material.Light.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:scaleX="1"
            android:scaleY="1"
            android:stepSize="1"
            android:visibility="visible" />

        <Button
            android:id="@+id/addSPButton"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:background="@drawable/rounded_corners"
            android:text="Add SP"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>