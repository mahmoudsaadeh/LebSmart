<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:padding="7dp">


    <TextView
        android:id="@+id/stateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="State:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#324e7b"/>

    <RadioGroup
        android:id="@+id/apartmentRadioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:text="Rent"
            android:buttonTint="#324e7b"
            android:textColor="#324e7b"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sale"
            android:buttonTint="#324e7b"
            android:textColor="#324e7b"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Price:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#324e7b"/>

    <EditText
        android:id="@+id/priceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"

        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Price in USD"
        android:inputType="number"
        android:paddingLeft="11dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/areaTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Area:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#324e7b"/>

    <EditText
        android:id="@+id/areaET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:hint="Apartment area in meter square"
        android:inputType="number"
        android:paddingLeft="11dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/addApartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="31dp"
        android:text="Add" />

</LinearLayout>
