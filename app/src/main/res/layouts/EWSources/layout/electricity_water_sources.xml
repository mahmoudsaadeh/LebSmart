<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        android:padding="17dp">

        <TextView
            android:id="@+id/electricityTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Electricity Source:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/electricitySource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="end"
            android:text="Electricity source shown here"
            android:textColor="#324e7b"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/waterTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Water Source:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waterSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="end"
            android:text="Water source shown here"
            android:textColor="#324e7b"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/waterLTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Water Level:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waterLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="end"
            android:text="Water level shown here"
            android:textColor="#324e7b"
            android:textSize="18sp"
            android:textStyle="italic|bold" />


    </LinearLayout>
</ScrollView>