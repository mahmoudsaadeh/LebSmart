<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D88304">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:id="@+id/lfaExpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/lfaTitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D88304"
                    android:paddingStart="7dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp"
                    android:text="Announcement Title"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TableLayout
                android:id="@+id/lfaExpandableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E4DB"
                android:shrinkColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lfaExpand">

                <TableRow
                    android:id="@+id/row1LFA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/announcementDateLFA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="Date found: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/announcementDateLFAContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Wednesday, February 5th, 2021"
                        android:textColor="#009688"
                        android:textSize="21sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row2LFA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/announcementDescriptionLFA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="Description: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/announcementDescriptionLFAContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="description goes here..."
                        android:textColor="#009688"
                        android:textSize="21sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row3LFA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/foundWithLFA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="Found by: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/foundWithLFAContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Hadi Al Mubasher"
                        android:textColor="#009688"
                        android:textSize="21sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/row4LFA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/phoneLFA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="Founder's phone: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/phoneLFAContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="03-584632"
                        android:textColor="#009688"
                        android:textSize="21sp" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>