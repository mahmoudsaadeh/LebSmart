<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="466dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:paddingStart="11dp"
        android:paddingTop="21dp"
        android:paddingEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullNameContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:text="full name"
            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:text="mail@mail.com"

            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneMP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneMPContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:text="xx-yyyyyy"
            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Building:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buildingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:text="Building Z"
            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User type:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userTypeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:text="resident / committee"
            android:textColor="#324e7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/deleteProfileBtn"
            android:layout_width="203dp"
            android:layout_height="59dp"
            android:layout_gravity="center"


            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corners"
            android:padding="11dp"
            android:text="Delete Account"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>