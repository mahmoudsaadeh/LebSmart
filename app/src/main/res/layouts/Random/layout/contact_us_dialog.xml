<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_layout_design"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="11dp"
    android:paddingEnd="10dp"
    android:paddingBottom="17dp">

    <ImageView
        android:id="@+id/crossImage2"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/x_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you can't find your building, please contact us at the email below in order to verify your building and add it to the list:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:text="lebsmart20@gmail.com"
        android:textAlignment="center"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</LinearLayout>