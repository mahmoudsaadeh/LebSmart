<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/signUpLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="17dp">


        <EditText
            android:textStyle="bold"
            android:id="@+id/fullNameSignUp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <EditText
            android:textStyle="bold"
            android:id="@+id/phoneNumberSignUp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:hint="8-digit phone number"
            android:inputType="phone"
            android:maxLength="8"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <EditText
            android:textStyle="bold"
            android:id="@+id/emailSignUp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_design"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <EditText
            android:textStyle="bold"
            android:id="@+id/passwordSignUp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:background="@drawable/edit_text_design"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <EditText
            android:textStyle="bold"
            android:id="@+id/confirmPassword"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:background="@drawable/edit_text_design"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp" />

        <TextView
            android:id="@+id/selectABuildingTV"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="Select a Building"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="italic|bold" />

        <RadioGroup
            android:id="@+id/radioGroupSignUp"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonCommittee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Committee member"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/radioButtonNormalResident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal resident"
                android:buttonTint="#324e7b"
                android:textColor="#324e7b"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </RadioGroup>


        <include
            android:id="@+id/includeSignUp"
            layout="@layout/progress_button_layout"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="77dp" />


    </LinearLayout>

</ScrollView>