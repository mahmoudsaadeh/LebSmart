<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="11dp"
        android:paddingTop="17dp"
        android:paddingEnd="11dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/BuildingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Infested Building:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Covid19BuildingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:text="STATUS"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Status:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Covid19UserStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:text="STATUS"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/prevention" />

        <TextView
            android:id="@+id/RegisterTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="Register As COVID19 Patient:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/covid19Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_corners_light_blue"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/UpdateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="Update COVID19 Status:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/announceRecovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners_light_blue"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:text="Announce Recovery"
            android:textColor="#ffffff"
            android:textSize="17sp" />


    </LinearLayout>

</ScrollView>