<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.NotVerifiedUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/notVerifiedMessageTV"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="Your account is not verified yet! For any issues, please do not hesitate to contact us at lebsmart20@gmail.com in order to verify your account and thus to benefit from our services."
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12pt"
            android:textStyle="bold|italic"
            android:paddingBottom="50px"
            />

        <Button
            android:id="@+id/logoutNV"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_corners"
            android:text="Logout"
            android:textColor="#000"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>