<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="11dp">

            <TextView

                android:id="@+id/scheduleAMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule a Meeting:"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText


                android:id="@+id/meetingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:textStyle="bold"
                android:paddingLeft="11dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_text_design"/>

            <EditText
                android:id="@+id/meetingDescriptionET"

                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_text_design"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Meeting description..."
                android:inputType="textMultiLine"
                android:paddingLeft="11dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:textStyle="bold" />

            <EditText
                android:textStyle="bold"
                
                android:id="@+id/meetingPlaceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Meeting location"
                android:inputType="textMultiLine"
                android:paddingLeft="11dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_text_design"/>

            <TextView
                android:id="@+id/meetingDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Meeting Date"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="italic|bold"
                />

            <Button
                android:id="@+id/meetingDateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_corners_light_blue"
                android:text="Set Date" />

            <TextView
                android:id="@+id/meetingTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Meeting Time"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/meetingTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Set Time"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:background="@drawable/rounded_corners_light_blue"/>

            <Button
                android:id="@+id/schedule"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="47dp"

                android:text="Schedule"
                android:background="@drawable/rounded_corners"
                android:textColor="#000"
                android:textSize="19sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>