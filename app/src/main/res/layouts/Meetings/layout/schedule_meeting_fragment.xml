<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="11dp">

            <TextView
                android:id="@+id/scheduleAMeeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule a Meeting:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/meetingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:hint="Title..."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/meetingDescriptionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Meeting description..."
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/meetingPlaceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Meeting location..."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/meetingDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Meeting Date"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/meetingDateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Set Date" />

            <TextView
                android:id="@+id/meetingTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="Meeting Time"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/meetingTimeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Set Time" />

            <Button
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="47dp"
                android:text="Schedule" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>