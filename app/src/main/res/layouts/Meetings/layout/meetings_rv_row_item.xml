<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="4dp"
    app:cardCornerRadius="27dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/meetingTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#324e7b"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="7dp"
                android:paddingBottom="5dp"
                android:text="Meeting Title"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TableLayout
                android:id="@+id/meetingsExpandableLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:background="#DEF5FF"
                android:shrinkColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meetingTitleTV">

                <TableRow
                    android:id="@+id/firstRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/meetingDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="Description: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/meetingDescriptionContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="descriptionn goes here!!!!!"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                </TableRow>

                <TableRow
                    android:id="@+id/firstRowMeetings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/meetingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="Time: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/meetingTimeContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="11 : 51"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/secondRowMeetings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/meetingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="Date: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/meetingDateContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="wednesday, jan 5th , 2020"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/thirdRowMeetings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/meetingPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="Place: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic"/>

                    <TextView
                        android:id="@+id/meetingPlaceContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Some place on earth"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/fourthRowMeetings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/scheduledBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="Scheduled by: "
                        android:textSize="21sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/scheduledByContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="someone"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>